---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: Role
metadata:
  name: alb-ingress
  
  namespace: {{ alb_ingress_controller_namespace }}
rules:
  - apiGroups: [""]
    resources: ["configmaps", "pods", "secrets", "namespaces"]
    verbs: ["get"]
  - apiGroups: [""]
    resources: ["configmaps"]
    verbs: ["get", "update"]
  - apiGroups: [""]
    resources: ["configmaps"]
    verbs: ["create"]
  - apiGroups: [""]
    resources: ["endpoints"]
    verbs: ["get"]
